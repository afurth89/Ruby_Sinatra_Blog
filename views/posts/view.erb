<div class="well">
  <h1><%=h @post.title %></h1>
  <p><%=h @post.body %></p>
  <br>
  <a class="btn btn-warning" role="button" href="/posts/<%= @post.id %>/edit">Edit Post</a>
</div>

<h3>Analytics</h3>
<table class="table table-bordered">
  <tr>
    <th>Number of words</th>
    <th>Avg word length</th>
    <th>Most common word(count)</th>
  </tr>
  <tr>
    <td><%= @length %></td>
    <td><%= @avg_length %></td>
    <td><%= @most_popular['word'] %> (<%= @most_popular['count'] %>)</td>
  </tr>
</table>

<h4>Full Word/Count List</h4>
<table class="table" style="width:50%">
  <tr>
    <th>Word</th>
    <th>Count</th>
  </tr>
<% @word_list.each do |word, count| %>
  <tr>
    <td><%= word %></td>
    <td><%= count %></td>
  </tr>    
<% end %>
</table>

